<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="be.nabu.libs.types.base.TypeConverterImpl">
	
	<implementation class="be.nabu.libs.types.base.TypeConverterImpl" />
	
	<service>
		<provide interface="be.nabu.libs.types.api.TypeConverter"/>
	</service>
	
 	<reference name="TypeConverterImpl_TypeConverterProvider"
		interface="be.nabu.libs.types.api.TypeConverterProvider"
		bind="addTypeConverter"
		unbind="removeTypeConverter"
		cardinality="0..n"
		policy="dynamic"/>

 	<reference name="TypeConverterImpl_Converter"
		interface="be.nabu.libs.converter.api.Converter"
		bind="setConverter"
		unbind="unsetConverter"
		cardinality="0..1"
		policy="dynamic"/>
		
</scr:component>
